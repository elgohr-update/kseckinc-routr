{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "containerGroupName": {
      "type": "string",
      "defaultValue": "routr-server",
      "metadata": {
        "description": "Routr Container Group"
      }
    }
  },
  "variables": {
    "container1name": "routr-server",
    "container1image": "fonoster/routr:1.0.0-rc6",
    "container2name": "redis-server",
    "container2image": "redis:6.0.3-alpine"
  },
  "resources": [
    {
      "name": "[parameters('containerGroupName')]",
      "type": "Microsoft.ContainerInstance/containerGroups",
      "apiVersion": "2018-10-01",
      "location": "[resourceGroup().location]",
      "properties": {
        "containers": [
          {
            "name": "[variables('container1name')]",
            "properties": {
              "image": "[variables('container1image')]",
              "resources": {
                "requests": {
                  "cpu": 1,
                  "memoryInGb": 1.5
                }
              },
              "environmentVariables": [
                {
                  "name": "DATA_SOURCE_PROVIDER",
                  "value": "redis_data_provider"
                },
                {
                  "name": "EXTERN_ADDR",
                  "value": "no-op"
                }
              ],
              "ports": [
                {
                  "port": 4567
                },
                {
                  "port": 5060
                },
                {
                  "port": 5061
                },
                {
                  "port": 5062
                },
                {
                  "port": 5063
                }
              ]
            }
          },
          {
            "name": "[variables('container2name')]",
            "properties": {
              "image": "[variables('container2image')]",
              "resources": {
                "requests": {
                  "cpu": 1,
                  "memoryInGb": 1.5
                }
              }
            }
          }
        ],
        "osType": "Linux",
        "ipAddress": {
          "type": "Public",
          "ports": [
            {
              "protocol": "tcp",
              "port": "4567"
            },
            {
              "protocol": "tcp",
              "port": "5060"
            },
            {
              "protocol": "tcp",
              "port": "5061"
            },
            {
              "protocol": "tcp",
              "port": "5062"
            },
            {
              "protocol": "tcp",
              "port": "5063"
            }
          ]
        }
      }
    }
  ],
  "outputs": {
    "containerIPv4Address": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.ContainerInstance/containerGroups/', parameters('containerGroupName'))).ipAddress.ip]"
    }
  }
}
